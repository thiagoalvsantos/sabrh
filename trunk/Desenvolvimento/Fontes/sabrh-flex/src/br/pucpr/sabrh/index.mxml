<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009" initialize="init()" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:mx="library://ns.adobe.com/flex/mx" xmlns:view="br.pucpr.sabrh.view.*" pageTitle="..:: SABRH ::.." xmlns:entity="br.pucpr.sabrh.entity.*">

	<!--
		 visible="false"
	-->
	<fx:Style source="assets/yflexskin.css"/>
	<fx:Script source="controller/index.as"/>
	<s:BitmapImage width="100%" height="100%" source="@Embed(source='assets/yflexskin.swf',symbol='BackgroundImage')" fillMode="scale"/>
<s:HGroup horizontalCenter="0" top="100" gap="30">
	
	<mx:Image id="iconeManterUsuario" x="228.35" y="46.75" source="@Embed(source='assets/img/btn-usuarios.png')" toolTip="Manutenção de Usuários" click="{abrirManterUsuario()}" mouseDown="{iconMD(iconeManterUsuario)}" mouseOut="{iconMoveUp(iconeManterUsuario)}" mouseOver="{iconMoveDown(iconeManterUsuario)}" mouseUp="{iconMU(iconeManterUsuario)}" buttonMode="true"/>
	<mx:Image id="iconeManterPropriedade" x="319.2" y="46.35" source="@Embed(source='assets/img/btn-propriedades.png')" toolTip="Manutenção de Propriedades" click="{abrirManterPropriedade()}" mouseDown="{iconMD(iconeManterPropriedade)}" mouseOut="{iconMoveUp(iconeManterPropriedade)}" mouseOver="{iconMoveDown(iconeManterPropriedade)}" mouseUp="{iconMU(iconeManterPropriedade)}" buttonMode="true"/>
	<mx:Image id="iconeManterAnimal" x="421.25" y="45.4" source="@Embed(source='assets/img/btn-animal.png')" toolTip="Manutenção de Animais" click="{abrirManterPropriedade()}" mouseDown="{iconMD(iconeManterAnimal)}" mouseOut="{iconMoveUp(iconeManterAnimal)}" mouseOver="{iconMoveDown(iconeManterAnimal)}" mouseUp="{iconMU(iconeManterAnimal)}" buttonMode="true"/>
	<mx:Image id="iconeRelatorios" x="421.25" y="45.4" source="@Embed(source='assets/img/btn-graficos.png')" toolTip="Relatórios" click="{abrirManterPropriedade()}" mouseDown="{iconMD(iconeRelatorios)}" mouseOut="{iconMoveUp(iconeRelatorios)}" mouseOver="{iconMoveDown(iconeRelatorios)}" mouseUp="{iconMU(iconeRelatorios)}" buttonMode="true"/>
</s:HGroup>
	<mx:Image id="iconeLogoff" bottom="10" right="10" source="@Embed(source='assets/img/btn-logout.png')" toolTip="Sair" click="{fazerLogoff()}" mouseDown="{iconMD(iconeLogoff)}" mouseOut="{iconMoveUp(iconeLogoff)}" mouseOver="{iconMoveDown(iconeLogoff)}" mouseUp="{iconMU(iconeLogoff)}" buttonMode="true"/>
	<mx:Image id="iconeLogo" source="@Embed(source='assets/img/logo.png')" scaleContent="true" width="40%" height="40%" horizontalCenter="0" bottom="30"/>
	<fx:Declarations>
		<mx:DateFormatter id="df" formatString="DD/MM/YYYY"/>
		<mx:DateFormatter id="hf" formatString="JJ:NN:SS"/>

		<mx:Parallel id="loginEffect">
			<mx:Fade alphaFrom="0" alphaTo="1"/>
			<mx:Sequence>
				<mx:Blur duration="300" blurYFrom="1.0" blurYTo="20.0"/>
				<mx:Blur duration="300" blurYFrom="20.0" blurYTo="1"/>
			</mx:Sequence>
		</mx:Parallel>

		<mx:Parallel id="popUpEffect">
			<mx:Fade alphaFrom="0" alphaTo="1"/>
		</mx:Parallel>

		<entity:Usuario id="user"/>
	</fx:Declarations>


	<s:controlBarContent>
		<s:Label width="100%" color="#3f3f3f" fontSize="15" fontWeight="bold" enabled="true" text=":: Sistema de Acasalamento Bovino da Raça Holandesa ::"/>
		<s:Label color="#3f3f3f" text="Usuario Logado"/>
		<s:Label id="usuarioLogado" text="{user.nome} ({user.perfil})" alpha="0.77"/>
		<s:Label color="#3f3f3f" text="Data do Sistema"/>
		<s:Label text="{ df.format( new Date() ) }"/>
		<s:Label color="#3f3f3f" text="Hora do Sistema"/>
		<s:Label id="txthora" text="{ hora }"/>
	</s:controlBarContent>

</s:Application>
