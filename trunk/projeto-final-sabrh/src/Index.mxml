<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml"
				layout="absolute"
				backgroundGradientColors="[0x000000,0x323232]"
				xmlns:components="components.*"
				viewSourceURL="srcview/index.html"
				initialize="{initTimer()}">


	<!--///////////////////////////////////////////
		 //
		 //					CSS e AS
		 //
		 /////////////////////////////////////////////// -->

	<mx:Style source="assets/css.css"/>
	<mx:Script source="scripts/index.as"/>

	<!--///////////////////////////////////////////
		 //
		 //					Objetos da página
		 //
		 /////////////////////////////////////////////// -->

	<mx:DateFormatter id="df"
					  formatString="DD/MM/YYYY"/>
	<mx:DateFormatter id="hf"
					  formatString="JJ:NN:SS"/>

	<!--///////////////////////////////////////////
		 //
		 //					Barra da controle
		 //
		 /////////////////////////////////////////////// -->
	<mx:ApplicationControlBar width="100%"
							  dock="true"
							  alpha="1.0"
							  fillAlphas="[1.0, 1.0]"
							  fillColors="[#5E677B, #313143]">
		<mx:Label text=".:: SABRH ::."
				  fontSize="15"
				  fontWeight="bold"
				  width="100%"
				  color="#4D4D4D"
				  enabled="true"/>
		<mx:Label text="Usuario Logado"
				  color="#4D4D4D"/>
		<mx:Label text="User"
				  id="usuarioLogado"
				  alpha="0.77"
				  color="#999999"/>
		<mx:Label text="Data do Sistema"
				  color="#4D4D4D"/>
		<mx:Label text="{ df.format( new Date() ) }"
				  color="#999999"/>
		<mx:Label text="Hora do Sistema"
				  color="#4D4D4D"/>
		<mx:Label id="txthora"
				  text="{ hora }"
				  color="#999999"/>
	</mx:ApplicationControlBar>


	<mx:HBox horizontalGap="5"
			 left="10"
			 right="10"
			 top="10"
			 bottom="30">
		<!--///////////////////////////////////////////
			 //
			 //				Menu
			 //
			 /////////////////////////////////////////////// -->
		<components:CollapsibleAccordion id="menu"
										 height="100%"
										 orientation="right"
										 barSize="36"
										 currentWidth="36"
										 drawerButtonStyle="drawerButton"
										 closeButtonStyle="drawerCloseRight"
										 accordianStyle="drawerAccordion">
			<mx:Canvas width="100%"
					   height="100%"
					   label="Consultas"
					   autoLayout="true"
					   icon="@Embed(source='assets/img/search-48x48.png')">
				<mx:VBox width="100%"
						 height="100%"
						 verticalGap="0"
						 paddingTop="2"
						 paddingLeft="2"
						 paddingRight="2"
						 paddingBottom="2">


					<mx:LinkButton label="Consultar Produtores"
								   icon="@Embed(source='assets/img/marcador-16x16.png')"
								   width="100%"
								   textAlign="left"
								   click="{action('CadastroProdutor')}"/>


				</mx:VBox>
			</mx:Canvas>

		</components:CollapsibleAccordion>
		<!--///////////////////////////////////////////
			 //
			 //					Conteúdo
			 //
			 /////////////////////////////////////////////// -->
		<mx:Panel title="Sistema de Acasalamento Bovino da Raça Holandesa"
				  width="100%"
				  height="100%"
				  id="painelConteudo">
			<mx:SWFLoader autoLoad="true"
						  width="100%"
						  height="100%"
						  scaleContent="true"
						  source="../bin-debug/login.swf"/>

		</mx:Panel>

	</mx:HBox>

	<mx:Label text="Todos os Direitos Reservados © 2010 TR Consulting"
			  fontSize="8"
			  bottom="7"
			  horizontalCenter="0"/>
</mx:Application>
