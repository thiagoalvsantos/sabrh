<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml"
				layout="absolute"
				backgroundGradientColors="[0x000000,0x323232]"
				xmlns:components="components.*"
				viewSourceURL="srcview/index.html"
				initialize="{initTimer()}">

	<mx:Style source="assets/css.css"/>
	
	<mx:Script>
		<![CDATA[
			import mx.binding.utils.BindingUtils;
			[Bindable]
			public var hora:String;
			private var timer:Timer=null;

			public function incrementa(event:TimerEvent):void
			{
				hora=hf.format(new Date());
			}

			public function initTimer():void
			{
				this.timer=new Timer(1000 * 1);
				timer.addEventListener("timer", incrementa);
				timer.start();
			}
		]]>
	</mx:Script>

	<mx:DateFormatter id="df"
					  formatString="DD/MM/YYYY"/>
	<mx:DateFormatter id="hf"
					  formatString="JJ:NN:SS"/>
	<mx:ApplicationControlBar width="100%"
							  dock="true"
							  alpha="1.0"
							  fillAlphas="[1.0, 1.0]"
							  fillColors="[#5E677B, #313143]">
		<mx:Label text=".:: SABRH ::."
				  fontSize="15"
				  fontWeight="bold"
				  width="100%"
				  color="#4D4D4D"
				  enabled="true"/>
		<mx:Label text="Usuario Logado"
				  color="#4D4D4D"/>
		<mx:Label text="User"
				  id="usuarioLogado"
				  alpha="0.77"
				  color="#999999"/>
		<mx:Label text="Data do Sistema"
				  color="#4D4D4D"/>
		<mx:Label text="{ df.format( new Date() ) }"
				  color="#999999"/>
		<mx:Label text="Hora do Sistema"
				  color="#4D4D4D"/>
		<mx:Label id="txthora"
				  text="{ hora }"
				  color="#999999"/>
	</mx:ApplicationControlBar>


	<mx:HBox horizontalGap="5"
			 left="10"
			 right="10"
			 top="10"
			 bottom="30">
		<components:CollapsibleAccordion id="collapsibleAccordion1"
										 height="100%"
										 orientation="right"
										 barSize="36"
										 currentWidth="36"
										 drawerButtonStyle="drawerButton"
										 closeButtonStyle="drawerCloseRight"
										 accordianStyle="drawerAccordion">
			<mx:Canvas width="100%"
					   height="100%"
					   label="Cadastros"
					   icon="@Embed(source='assets/img/email-48x48.png')">
				<mx:TextArea text="Content"
							 width="100%"
							 height="100%"/>
			</mx:Canvas>
			<mx:Canvas width="100%"
					   height="100%"
					   label="Consultas"
					   icon="@Embed(source='assets/img/article-48x48.png')">
				<mx:TextArea text="Content"
							 width="100%"
							 height="100%"/>
			</mx:Canvas>
			<mx:Canvas width="100%"
					   height="100%"
					   label="Avaliação"
					   icon="@Embed(source='assets/img/article-48x48.png')">
				<mx:TextArea text="Content"
							 width="100%"
							 height="100%"/>
			</mx:Canvas>
			<mx:Canvas width="100%"
					   height="100%"
					   label="Animais"
					   icon="@Embed(source='assets/img/author-48x48.png')">
				<mx:TextArea text="Content"
							 width="100%"
							 height="100%"/>
			</mx:Canvas>
			<mx:Canvas width="100%"
					   height="100%"
					   label="Relatórios"
					   icon="@Embed(source='assets/img/article-48x48.png')">
				<mx:TextArea text="Content"
							 width="100%"
							 height="100%"/>
			</mx:Canvas>
		</components:CollapsibleAccordion>

		<mx:Panel title="Conteúdo"
				  width="100%"
				  height="100%">

		</mx:Panel>

	</mx:HBox>

	<mx:Label text="Todos os Direitos Reservados © 2010 TR Consulting"
			  fontSize="8"
			  bottom="7"
			  horizontalCenter="0"/>
</mx:Application>
