<?xml version="1.0" encoding="UTF-8"?>
<datasources>
	<local-tx-datasource>
		<jndi-name>sabrhDataSource</jndi-name>
		<connection-url>${myJdbcUrl}</connection-url>
		<driver-class>${myJdbcDriver}</driver-class>
		<user-name>${myJdbcUser}</user-name>
		<password>${myJdbcPassword}</password>
		<min-pool-size>2</min-pool-size>
		<max-pool-size>5</max-pool-size>
		<idle-timeout-minutes>5</idle-timeout-minutes>
		<track-statements />
	</local-tx-datasource>
</datasources>
