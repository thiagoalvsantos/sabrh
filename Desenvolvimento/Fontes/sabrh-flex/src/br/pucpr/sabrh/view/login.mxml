<?xml version="1.0" encoding="utf-8"?>
<mx:Panel xmlns:mx="http://www.adobe.com/2006/mxml"
		  layout="absolute"
		  horizontalCenter="0"
		  verticalCenter="0"
		  title=".:: Login ::."
		  width="477">

	<mx:Script source="../controller/login.as"/>

	<mx:RemoteObject id="usuarioService"
					 fault="onFault(event)"
					 destination="UsuarioService"
					 showBusyCursor="true">
		<mx:method result="{autenticarResult(event)}"
				   name="autenticar"/>
	</mx:RemoteObject>


	<mx:Form horizontalCenter="0"
			 verticalCenter="0">
		<mx:FormItem label="UsuÃ¡rio"
					 required="true">
			<mx:TextInput id="txtUsuario"/>
		</mx:FormItem>
		<mx:FormItem label="Senha"
					 required="true">
			<mx:TextInput displayAsPassword="true"
						  id="txtSenha"/>
		</mx:FormItem>
		<mx:FormItem>
			<mx:Button label="Entrar"
					   click="autenticar()"/>
		</mx:FormItem>
	</mx:Form>
</mx:Panel>
