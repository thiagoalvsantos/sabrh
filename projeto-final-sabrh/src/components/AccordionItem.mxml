<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml"
		 width="100%"
		 height="140"
		 verticalAlign="middle"
		 horizontalAlign="center"
		 showEffect="Fade"
		 verticalScrollPolicy="off"
		 horizontalScrollPolicy="off">

	<mx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			[Bindable]
			public var description:String;

			[Bindable]
			public var image:*;

			[Bindable]
			public var title:String;

			[Bindable]
			public var subMenu:ArrayCollection;
		]]>
	</mx:Script>

	<mx:Repeater id="links"
				 dataProvider="{subMenu}">
		<mx:Button label="{links.currentItem.li}"
				   icon="@Embed('../assets/link.png')" width="120" labelPlacement="right" textAlign="left"/>

	</mx:Repeater>

</mx:VBox>
